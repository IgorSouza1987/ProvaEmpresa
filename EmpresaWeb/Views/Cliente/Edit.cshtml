<!-- abrindo uma área de formulário -->
@using (Html.BeginForm())
{
    <!-- local para exibir as mensagens de erro de validação -->
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    @Html.TextBoxFor(model => model.IdCliente,
       new { @class = "form-control col-md-4" })
    <br />
    @*@Html.HiddenFor(model => model.IdImovel)*@

    <label>Nome do Produto:</label>
    @Html.TextBoxFor(model => model.NomeCliente,
        new { @class = "form-control col-md-4" })
    <br />

    <label>Preço:</label>
    @Html.TextBoxFor(model => model.Email,
        new { @class = "form-control col-md-4" })
    <br />

    <label>Quantidade:</label>
    @Html.TextBoxFor(model => model.Cpf,
        new { @class = "form-control col-md-4" })
    <br />

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
        </label>
    </div>


    <input type="submit" value="Atualizar Cliente"
           class="btn btn-primary" />
    <br />
    <br />

    <strong>@TempData["Mensagem"]</strong>
}
