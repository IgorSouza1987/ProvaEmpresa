<h4>Atualização dos dados </h4>
<a href="/Imovel/Index">Lista de Imovel</a>
<hr />

@using (Html.BeginForm())
{
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    @Html.TextBoxFor(model => model.IdImovel,
       new { @class = "form-control col-md-4" })
    <br />

    <label>Nome do Produto:</label>
    @Html.TextBoxFor(model => model.Tipo,
        new { @class = "form-control col-md-4" })
    <br />

    <label>Preço:</label>
    @Html.TextBoxFor(model => model.Valor,
        new { @class = "form-control col-md-4" })
    <br />

    <label>Quantidade:</label>
    @Html.TextBoxFor(model => model.Descricao,
        new { @class = "form-control col-md-4" })
    <br />

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
        </label>
    </div>


    <input type="submit" value="Atualizar Imóvel"
           class="btn btn-primary" />
    <br />
    <br />

    <strong>@TempData["Mensagem"]</strong>
}
